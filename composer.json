{
    "name": "mguinea/laravel-robots",
    "description": "Laravel package to manage robots in an easy way",
    "keywords": [
        "robots",
        "laravel"
    ],
    "homepage": "https://github.com/mguinea/laravel-robots",
    "type": "laravel-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Guinea",
            "email": "develop.marcguinea@gmail.com"
        }
    ],
    "require": {
        "php" : "^7.3",
        "illuminate/database": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0",
		"orchestra/testbench": "^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "Mguinea\\Robots\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mguinea\\Robots\\Tests\\": "tests"
        }
    },
    "scripts": {
      "test": "vendor/bin/phpunit",
      "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
      "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mguinea\\Robots\\RobotsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
